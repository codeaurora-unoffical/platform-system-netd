        "TrafficController.cpp",
        "UidRanges.cpp",
        "WakeupController.cpp",
        "XfrmController.cpp",
        ":netd_metrics_aidl",
    ],
    shared_libs: [
        "libbpf",
        "libnetd_resolv",
        "libnetdaidl",
        "libbase",
        "libbinder",
        "liblogwrap",
        "libnetutils",
