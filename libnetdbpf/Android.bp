cc_library_headers {
    name: "libnetdbpf_headers",
    vendor_available: false,
    host_supported: false,
    export_include_dirs: ["include"],
    target: {
        linux_bionic: {
            enabled: true,
        },
    },
}

cc_library {
    name: "libnetdbpf",
    vendor_available: false,
    host_supported: false,
    target: {
        android: {
            srcs: [
                "BpfNetworkStats.cpp"
            ],
            sanitize: {
                misc_undefined: ["integer"],
            },
        },
    },

    shared_libs: [
        "libbase",
        "libbpf",
        "libutils",
        "liblog",
        "libnetdutils",
    ],
    header_libs: [
        "libnetdbpf_headers"
    ],
    export_header_lib_headers: ["libnetdbpf_headers"],
    local_include_dirs: ["include"],

    defaults: ["netd_defaults"],
    cflags: [
        "-Werror",
        "-Wall",
        "-Wextra",
    ],
}

cc_test {
    name: "libnetdbpf_test",
    srcs: [
        "BpfNetworkStatsTest.cpp",
    ],
    defaults: ["netd_defaults"],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-error=unused-variable",
    ],
    static_libs: ["libgmock"],
    shared_libs: [
        "libbase",
        "libbpf",
        "liblog",
        "libnetdbpf",
        "libnetdutils",
        "libutils",
    ],
}
